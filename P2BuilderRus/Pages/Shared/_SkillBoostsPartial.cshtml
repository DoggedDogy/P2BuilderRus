@using P2BuiderRus.Model
@model List<Skill>
    <div class="modal-header modal-body-color">
        <h1 class="modal-title-mod fs-5" id="staticBackdropLabel">Set Starting Ability Boosts</h1>
    </div>
    <div class="modal-body modal-body-color row">
        <div>
        </div>
    </div>
    @foreach (Skill item in Model)
    {
        <div class="row">
            <div class="col-1 form-check form-check-inline">
                <label>
                    <input type="radio" class="@item.Name" name="@item.Name" id="T" checked>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ff5722" class="bi bi-dice-1-fill" viewBox="0 0 16 16">
                        <path d="M3 0a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V3a3 3 0 0 0-3-3H3zm5 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                    </svg>
                </label>
                <label>
                    <input type="radio" class="@item.Name" name="@item.Name" id="E" checked>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ff5722" class="bi bi-dice-2-fill" viewBox="0 0 16 16">
                        <path d="M0 3a3 3 0 0 1 3-3h10a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3H3a3 3 0 0 1-3-3V3zm5.5 1a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0zm6.5 9.5a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                    </svg>
                </label>
                <label>
                    <input type="radio" class="@item.Name" name="@item.Name" id="M" checked>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ff5722" class="bi bi-dice-3-fill" viewBox="0 0 16 16">
                        <path d="M3 0a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V3a3 3 0 0 0-3-3H3zm2.5 4a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm8 8a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zM8 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                    </svg>
                </label>
                <label>
                    <input type="radio" class="@item.Name" name="@item.Name" id="L" checked>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#ff5722" class="bi bi-dice-4-fill" viewBox="0 0 16 16">
                        <path d="M3 0a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V3a3 3 0 0 0-3-3H3zm1 5.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm8 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm1.5 6.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zM4 13.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" />
                    </svg>
                </label>
            </div>
            @if (@item.Modifier > 0)
            {
                <label class="layout text col-3 mod" id="@item.Name" for="@item.Modifier">+@item.Modifier</label>
            }
            else
            {
                <label class="layout text col-3 mod" id="@item.Name" for="@item.Modifier">@item.Modifier</label>
            }
            <div class="col">
                <label class="layout text-con" for="@item.Name">@item.Name</label>
            </div>
            <input type="hidden" id="@item.Name" for="@item.Modifier" value="@item.TrainingModifier">
            <input type="hidden" id="@item.Name" for="@item.Modifier" value="@item.BasicCharacteristic">
        </div>
    }
    <script>
            $("input:checkbox").click(function () {
                var bol = $("input:checkbox:checked").length >= 4;
                $("input:checkbox").not(":checked").attr("disabled", bol);
                $('#boostCount').text(4 - $("input:checkbox:checked").length);
            });
    </script>

